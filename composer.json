{
    "name": "Loop/Client",
    "type": "project",
    "description": "",
    "keywords": [
        "Loop",
        "Client"
    ],
    "homepage": "https://github.com/Loop/Client",
    "license": "MIT",
    "authors": [
        {
            "name": "William",
            "email": "oi@williamespindola.com.br",
            "homepage": "https://williamespindola.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.3",
        "doctrine/dbal": "^2.10",
        "guzzlehttp/guzzle": "~6.0",
        "ramsey/uuid": "^3.8",
        "respect/validation": "^1.1",
        "slim/psr7": "^0.6.0",
        "slim/slim": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Loop\\Client\\": "api//src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loop\\Client\\": "api//tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs api//src api//tests",
        "fix-style": "phpcbf api//src api//tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
